# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações JWT
JWT_SECRET=sua_chave_secreta_muito_forte_aqui_para_producao_123456789
JWT_EXPIRATION=24h

# Configurações FIPE
FIPE_CACHE_TIME=3600
FIPE_REQUEST_TIMEOUT=10000
FIPE_MAX_RETRIES=3
FIPE_MAX_SEARCH_RESULTS=100

# Configurações de Cache
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600
CACHE_MAX_KEYS=1000

# Configurações da Aplicação
MAX_FAVORITES=100
MAX_HISTORY_ITEMS=1000
MAX_COMPARISONS=5

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Configurações de Log
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_CONSOLE_LOG=true
ENABLE_FILE_LOG=false

# Configurações de Segurança
BCRYPT_ROUNDS=12

# Features (true/false)
ENABLE_FAVORITES=true
ENABLE_HISTORY=true
ENABLE_SEARCH=true
ENABLE_COMPARISONS=true
ENABLE_EXPORT=true

# Configurações de Desenvolvimento
ENABLE_DEBUG_ROUTES=true
ENABLE_SWAGGER=true

# URLs permitidas para CORS (separadas por vírgula)
CORS_ORIGINS=http://localhost:4200,http://localhost:3000,http://localhost:8080
